{% extends "base.html.twig" %}

{% block title %}Fiche de salle{% endblock %}

{% block main %}
    <div class="col-lg-4 mx-auto">
        <h1 class="p-5 text-center fw-bold">Fiche de {{ partner.name }}</h1>
        <h3 class="p-5 text-start fw-bold">Gérant : {{ partner.getOwner.username }}</h3>
        <h5 class="text-start p-5">Salle(s) possédée(s) :</h5>
        
        <div class="d-flex">
            {% for partner in partners %}
                <div class="card m-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ partner.name }}</h5>
                        <p class="card-text">{{ partner.address }}</p>
                        <p class="card-text">{{ partner.zipcode }} {{ partner.city }}</p>
                    </div>
                    <div class="card-footer">
                        {% if partner.isIsActivate == 0 %}
                            <p class="text-muted">Non activée</p>
                        {% else %}
                            <p>Activée</p>
                        {% endif %}
                        <a href="#" class="btn btn-primary">Voir la salle</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="{{ path('salle_index') }}" class="btn btn-success mt-3 mx-1">Retour à la liste des salles</a>
    </div>
{% endblock %}